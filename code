import tkinter as tk
from tkinter import *
import tkvideo
from tkvideo import *
import os

root = Tk()
w = Label(root, text="video player :)")
root.geometry("100x100")

var = tk.StringVar()

listbox = tk.Listbox(root)
mp4_list = os.listdir(r"D:\videos")
for file in mp4_list:
    listbox.insert(END, file)
listbox.pack()

video_player = tkvideo(root, 
            w,
            loop = 1,
            size = (700, 500)
)

def submit():
    global video_name
    video_name = var.get()
    var.set("")
    video_player_func()
    print(video_name)

def video_player_func():
    video_player.play()

entry = tk.Entry(root, textvariable=var)
entry.pack()
btn = tk.Button(root, text="Play", 
                    command=submit)

btn.pack()
w.pack()
root.mainloop()
